{
	"name": "sst-bun-monorepo",
	"version": "0.0.0",
	"workspaces": {
		"packages": [
			"packages/*"
		],
		"catalog": {
			"@biomejs/biome": "2.3.4",
			"@tsconfig/bun": "^1",
			"@types/bun": "^1.3.1",
			"typescript": "^5"
		}
	},
	"scripts": {
		"all:build": "bun --filter '*' build",
		"all:code:check": "bun --filter '*' code:check",
		"all:clean": "bun --filter '*' clean",
		"aws:sso": "aws sso login --sso-session=fire-emblem",
		"aws:check": "aws sts get-caller-identity --profile=fe-prd",
		"code:check": "biome check --write && bun --filter '*' code:check",
		"deploy:prd": "bun all:code:check && bun all:clean && bun all:build && bun sst:deploy:prd",
		"remove:prd": "sst remove --stage production",
		"sst:deploy:prd": "sst deploy --stage production",
		"test": "bun --filter '*' test"
	},
	"dependencies": {
		"sst": "^3"
	},
	"engines": {
		"bun": "1.3.1"
	},
	"packageManager": "bun@1.3.1"
}
